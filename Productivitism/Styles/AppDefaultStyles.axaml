<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <Button Content="Start Session"/>
        </Border>
    </Design.PreviewWith>

    <Style Selector="Button.BottomButton">
        <Setter Property="Background" Value="#0ef81d"/>
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="Button.BottomButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource pointeroverButton}"/>
        <Setter Property="Foreground" Value="{DynamicResource pointeroverForegroundButton}"/>
    </Style>

    <Style Selector="Button.UpperButton">
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style Selector="Button.UpperButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource pointeroverButton}"/>
        <Setter Property="Foreground" Value="{DynamicResource pointeroverForegroundButton}"/>
    </Style>

    <Style Selector="Label.Top">
        <Setter Property="Foreground" Value="{DynamicResource TopTextColor}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="28"/>
    </Style>

    <Style Selector="Label.h1">
        <Setter Property="FontSize" Value="42"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="ExtraBold"/>

    </Style>

    <Style Selector="Label.h2">
        <Setter Property="FontSize" Value="34"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Bold"/>

    </Style>

    <Style Selector="TextBlock.Text">
        <Setter Property="FontSize" Value="34"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="SemiLight"/>

    </Style>

    <Style Selector="Button.DiscordButton">
        <Setter Property="Background" Value="#4a1acc"/>
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="Button.BottomButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource pointeroverButton}"/>
        <Setter Property="Foreground" Value="{DynamicResource pointeroverForegroundButton}"/>
    </Style>

    <Style Selector="Button.PurchaseButton">
        <Setter Property="Background" Value="Lime"/>
        <Setter Property="FontSize" Value="25"/>
    </Style>




</Styles>
