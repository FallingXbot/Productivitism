<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:view="using:Productivitism.View"
             mc:Ignorable="d" d:DesignWidth="800"
             d:DesignHeight="450"
             xmlns:vm="clr-namespace:Productivitism.ViewModel"
             x:DataType="view:MainViewModel"
             x:Class="Productivitism.Statistics">
    <StackPanel>
        <Label Classes="h1" Content="Your Statistics"/>
        <TextBlock Margin="0 20 0 0" Classes="Text" Text="All Session Time Spent:"/>
        <Label Classes="h2" Content="{Binding AllTimeSpent}"/>
    </StackPanel>
</UserControl>
