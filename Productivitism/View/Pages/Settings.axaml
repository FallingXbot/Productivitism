<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:view="using:Productivitism.View"
             mc:Ignorable="d" d:DesignWidth="1100"
             xmlns:vm="clr-namespace:Productivitism.ViewModel"
             x:DataType="view:MainViewModel"
             d:DesignHeight="464"
             x:Class="Productivitism.Settings">
    <StackPanel>
        <Label Content="Settings" Classes="h1"/>
        <Label Margin="0 10 0 0" Classes="h2" Content="Delete All Your Data"/>
        <TextBlock Classes="Text" Text="This Will Also Close Your App"/>
        <Button Command="{Binding DeleteDataCommand}" Margin="0 20 0 0" Background="Red" Height="60" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="30" Content="Delete" HorizontalAlignment="Center" Width="200"/>

    </StackPanel>
</UserControl>
